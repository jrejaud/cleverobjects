<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.crejaud.jrejaud.cleverobjects" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.crejaud.jrejaud.cleverobjects.PhoneActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="com.crejaud.jrejaud.cleverobjects.WatchListener" >
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.BIND_LISTENER" />
            </intent-filter>
        </service>

        <activity
            android:name="com.crejaud.jrejaud.cleverobjects.SmartthingsLogin"
            android:label="@string/title_activity_smartthings_login"
            android:parentActivityName="com.crejaud.jrejaud.cleverobjects.PhoneActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.crejaud.jrejaud.cleverobjects.PhoneActivity" />
        </activity>
    </application>

</manifest>
